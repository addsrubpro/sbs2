<h1>New partyrole</h1>

<% form_for @partyrole do |f| %>
  <%= f.error_messages %>

  <b>
    Party ID: 
    <%= @person.party_id %><br />
    Name: 
    <%= @person.current_first_name %> 
    <%= @person.current_last_name %>
    <%= f.hidden_field :party_id, :value => $party_id %>
  </b>
  <p>Role assignment<br />
    <%= collection_select(:partyrole, :role_id, @roles, :id, :description, :prompt => true) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', partyroles_path %> |
<%= link_to 'Quit role assignment', people_path %>