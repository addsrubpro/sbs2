<h1>Listing people</h1>

<table>
  <tr>
    <th>Party ID</th>
    <th>Current last name</th>
    <th>Current first name</th>
    <th>Birth date</th>
    <th>ID</th>
    <th>Income classification</th>
    <th>ID</th>
    <th>Occupation classification</th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%=h person.party_id %></td>
    <td><%=h person.current_last_name %></td>
    <td><%=h person.current_first_name %></td>
    <td><%=h person.birth_date %></td>
    <td><%=h person.incomeclassification_id %></td>
    <td><%=h person.incomeclassification.description %></td>
    <td><%=h person.occupationclassification_id %></td>
    <td><%=h person.occupationclassification.description %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

