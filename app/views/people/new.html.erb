<h1>New person</h1>

<% form_for(@person) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :current_last_name %><br />
    <%= f.text_field :current_last_name %>
  </p>
  <p>
    <%= f.label :current_first_name %><br />
    <%= f.text_field :current_first_name %>
  </p>
  <p>
    <%= f.label :birth_date %><br />
    <%= f.date_select(:birth_date, :start_year => 1940) %>
  </p>
  <p>Income classification <br />
    <%= collection_select(:person, :incomeclassification_id, @incomeclass, :id, :description, :prompt => true) %>
  </p>
  <p>Occupation classification <br />
    <%= collection_select(:person, :occupationclassification_id, @occupationclass, :id, :description, :prompt => true) %>
  </p>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', people_path %>