<!-- Search results page -->
<% if @people.count > 1 %>
  <h1>Listing people - search results</h1>
<% else %>
  <h1>Listing person - search result</h1>
<% end %>

<div class="paginate"> <%= will_paginate %> </div><br />

<table>
  <tr>
    <th>Party ID</th>
    <th>Current last name</th>
    <th>Current first name</th>
    <th>Birth date</th>
    <th>Income classification</th>
    <th>Occupation classification</th>
    <% if admin_user? %>
        <th>User account name</th>
    <% end %>
  </tr>
  <%= render @people %>     <!-- calls the partial _person.html.erb for each Person object collected in the @people array-->
</table>

<div class="paginate"> <%= will_paginate %> </div><br />

<%= link_to 'New person', new_person_path %>  |
<%= link_to 'New people search', search_form_path %>  |
<%= link_to 'Home', root_path %>