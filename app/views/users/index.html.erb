<h1>Listing user account</h1>

<table>
  <tr>
    <th>Party</th>
    <th>Username</th>
  </tr>

<% @party_id = @person.party_id %>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.party_id %></td>
    <td><%=h user.username %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<% if @user.nil? %>
<%= link_to "Create new user account", :controller => "users", :action => "new", :party_id => @party_id %>|
<% end %>
<%= link_to 'Quit user account management', people_path %>